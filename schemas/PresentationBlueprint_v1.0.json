{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://helix.ai/schemas/PresentationBlueprint_v1.0.json",
  "title": "Presentation Blueprint",
  "description": "Strategic presentation blueprint produced by the Chief Presentation Strategist Agent (AGENT_2)",
  "type": "object",
  "required": [
    "strategic_choice",
    "presentation_blueprint",
    "metadata"
  ],
  "properties": {
    "strategic_choice": {
      "type": "object",
      "required": ["chosen_theme_name", "chosen_narrative_framework", "reasoning", "rejected_options"],
      "properties": {
        "chosen_theme_name": {
          "type": "string",
          "description": "Final selected visual theme name",
          "minLength": 3,
          "maxLength": 100
        },
        "chosen_narrative_framework": {
          "type": "string",
          "description": "Final selected narrative framework",
          "minLength": 3,
          "maxLength": 100
        },
        "reasoning": {
          "type": "string",
          "description": "Final argument explaining why the chosen combination is optimal",
          "minLength": 50,
          "maxLength": 2000
        },
        "rejected_options": {
          "type": "array",
          "description": "Options that were considered and rejected",
          "items": {
            "type": "object",
            "required": ["option_type", "option_name", "reason_for_rejection"],
            "properties": {
              "option_type": {
                "type": "string",
                "enum": ["Visual Theme", "Narrative Framework", "Layout Style"],
                "description": "Type of option that was rejected"
              },
              "option_name": {
                "type": "string",
                "description": "Name of the rejected option",
                "minLength": 3,
                "maxLength": 100
              },
              "reason_for_rejection": {
                "type": "string",
                "description": "Specific reason why this option was rejected",
                "minLength": 10,
                "maxLength": 500
              }
            }
          },
          "maxItems": 10
        }
      }
    },
    "presentation_blueprint": {
      "type": "array",
      "description": "Detailed slide-by-slide presentation blueprint",
      "items": {
        "type": "object",
        "required": ["slide_number", "logic_unit_purpose", "layout", "elements", "speaker_notes"],
        "properties": {
          "slide_number": {
            "type": "integer",
            "minimum": 1,
            "maximum": 50,
            "description": "Sequential slide number"
          },
          "logic_unit_purpose": {
            "type": "string",
            "description": "The logical purpose this slide serves in the narrative",
            "minLength": 5,
            "maxLength": 300
          },
          "layout": {
            "type": "string",
            "enum": [
              "Title_Slide",
              "Content_With_Chart", 
              "Two_Column",
              "Full_Image",
              "Quote_Slide",
              "Bullet_Points",
              "Comparison",
              "Timeline",
              "Process_Flow",
              "Call_To_Action"
            ],
            "description": "Slide layout template"
          },
          "elements": {
            "type": "object",
            "description": "Content elements for the slide",
            "properties": {
              "title": {
                "type": "string",
                "maxLength": 200
              },
              "subtitle": {
                "type": "string",
                "maxLength": 300
              },
              "content": {
                "type": "string",
                "maxLength": 1000
              },
              "bullet_points": {
                "type": "array",
                "items": {
                  "type": "string",
                  "maxLength": 500
                },
                "maxItems": 10
              },
              "visual_placeholder": {
                "type": "string",
                "description": "Description of visual elements needed",
                "maxLength": 500
              }
            }
          },
          "speaker_notes": {
            "type": "object",
            "description": "Speaker notes and guidance",
            "required": ["speech", "guide_note"],
            "properties": {
              "speech": {
                "type": "string",
                "description": "What the speaker should say",
                "minLength": 10,
                "maxLength": 2000
              },
              "guide_note": {
                "type": "string", 
                "description": "Internal guidance notes for the speaker",
                "minLength": 5,
                "maxLength": 500
              }
            }
          },
          "transition_notes": {
            "type": "string",
            "description": "Transition guidance to next slide",
            "maxLength": 300
          }
        }
      },
      "minItems": 1,
      "maxItems": 50
    },
    "metadata": {
      "type": "object",
      "required": ["created_by", "version"],
      "properties": {
        "created_by": {
          "type": "string",
          "description": "Agent that created this blueprint"
        },
        "version": {
          "type": "string",
          "description": "Schema version"
        },
        "ai_model": {
          "type": "string",
          "description": "AI model used for generation"
        },
        "ai_provider": {
          "type": "string", 
          "description": "AI provider used"
        },
        "tokens_used": {
          "type": "integer",
          "minimum": 0,
          "description": "Tokens consumed in generation"
        },
        "strategy_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence in strategic choices"
        },
        "processing_notes": {
          "type": "string",
          "description": "Additional processing information"
        }
      }
    }
  }
}