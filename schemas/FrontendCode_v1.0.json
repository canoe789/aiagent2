{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://helix.ai/schemas/FrontendCode_v1.0.json",
  "title": "Frontend Code",
  "description": "HTML/CSS/JS code generated by the Frontend Engineer Agent (AGENT_3)",
  "type": "object",
  "required": [
    "html",
    "css",
    "metadata"
  ],
  "properties": {
    "html": {
      "type": "string",
      "description": "Complete HTML code",
      "minLength": 100,
      "maxLength": 50000
    },
    "css": {
      "type": "string",
      "description": "Complete CSS code",
      "minLength": 50,
      "maxLength": 50000
    },
    "javascript": {
      "type": "string",
      "description": "JavaScript code (if applicable)",
      "maxLength": 50000
    },
    "assets": {
      "type": "object",
      "description": "Additional assets and resources",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {"type": "string"},
              "alt_text": {"type": "string"},
              "purpose": {"type": "string"},
              "dimensions": {"type": "string"}
            }
          }
        },
        "fonts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "family": {"type": "string"},
              "weights": {"type": "array", "items": {"type": "integer"}},
              "source": {"type": "string"}
            }
          }
        },
        "icons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "usage": {"type": "string"},
              "format": {"type": "string", "enum": ["svg", "png", "ico", "font"]}
            }
          }
        }
      }
    },
    "structure": {
      "type": "object",
      "description": "Code structure and organization",
      "properties": {
        "components": {
          "type": "array",
          "description": "Main UI components",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "purpose": {"type": "string"},
              "dependencies": {"type": "array", "items": {"type": "string"}}
            }
          }
        },
        "sections": {
          "type": "array",
          "description": "Main page sections",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "purpose": {"type": "string"},
              "content_type": {"type": "string"}
            }
          }
        },
        "navigation": {
          "type": "object",
          "properties": {
            "type": {"type": "string", "enum": ["header", "sidebar", "footer", "floating"]},
            "items": {"type": "array", "items": {"type": "string"}},
            "mobile_behavior": {"type": "string"}
          }
        }
      }
    },
    "technical_details": {
      "type": "object",
      "description": "Technical implementation details",
      "properties": {
        "html_version": {
          "type": "string",
          "enum": ["HTML5", "XHTML", "HTML4"],
          "default": "HTML5"
        },
        "css_features": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["flexbox", "grid", "custom-properties", "animations", "transforms", "media-queries"]
          }
        },
        "javascript_features": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["es6+", "dom-manipulation", "event-handling", "async-await", "modules"]
          }
        },
        "frameworks_used": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "responsive_design": {
      "type": "object",
      "description": "Responsive design implementation",
      "properties": {
        "breakpoints": {
          "type": "object",
          "properties": {
            "mobile": {"type": "string"},
            "tablet": {"type": "string"},
            "desktop": {"type": "string"},
            "large_desktop": {"type": "string"}
          }
        },
        "mobile_first": {
          "type": "boolean",
          "description": "Whether mobile-first approach was used"
        },
        "touch_optimized": {
          "type": "boolean",
          "description": "Whether touch interactions are optimized"
        }
      }
    },
    "performance": {
      "type": "object",
      "description": "Performance optimization details",
      "properties": {
        "optimization_techniques": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["minification", "compression", "lazy-loading", "critical-css", "resource-hints"]
          }
        },
        "estimated_metrics": {
          "type": "object",
          "properties": {
            "load_time": {"type": "string"},
            "file_sizes": {
              "type": "object",
              "properties": {
                "html": {"type": "string"},
                "css": {"type": "string"},
                "js": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "description": "Accessibility implementation details",
      "properties": {
        "wcag_level": {
          "type": "string",
          "enum": ["A", "AA", "AAA"],
          "description": "WCAG compliance level targeted"
        },
        "features_implemented": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["semantic-html", "aria-labels", "focus-indicators", "color-contrast", "keyboard-navigation", "screen-reader-support"]
          }
        },
        "testing_notes": {
          "type": "string",
          "description": "Accessibility testing recommendations"
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["framework", "created_by", "version"],
      "properties": {
        "framework": {
          "type": "string",
          "description": "Frontend framework/approach used",
          "enum": ["vanilla_html_css", "react", "vue", "angular", "svelte", "next_js", "nuxt_js"]
        },
        "created_by": {
          "type": "string",
          "description": "Agent that generated this code"
        },
        "version": {
          "type": "string",
          "description": "Schema version"
        },
        "responsive": {
          "type": "boolean",
          "description": "Whether the code is responsive",
          "default": true
        },
        "accessibility_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Estimated accessibility score"
        },
        "performance_optimized": {
          "type": "boolean",
          "description": "Whether performance optimizations were applied"
        },
        "browser_compatibility": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Chrome", "Firefox", "Safari", "Edge", "IE11", "Opera"]
          },
          "description": "Supported browsers"
        },
        "code_quality_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Estimated code quality score"
        }
      }
    }
  }
}