{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://helix.ai/schemas/FrontendCode_v1.0.json",
  "title": "Frontend Code",
  "description": "HTML/CSS/JS code generated by the Frontend Engineer Agent (AGENT_3)",
  "type": "object",
  "required": [
    "html",
    "css", 
    "metadata"
  ],
  "properties": {
    "html": {
      "type": "string",
      "description": "Complete HTML code"
    },
    "css": {
      "type": "string", 
      "description": "Complete CSS code"
    },
    "javascript": {
      "type": "string",
      "description": "JavaScript code (if applicable)"
    },
    "assets": {
      "type": "object",
      "description": "Additional assets and resources",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {"type": "string"},
              "alt_text": {"type": "string"},
              "purpose": {"type": "string"},
              "dimensions": {"type": "string"}
            }
          }
        },
        "fonts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "family": {"type": "string"},
              "weights": {"type": "array", "items": {"type": "integer"}},
              "source": {"type": "string"}
            }
          }
        },
        "icons": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "usage": {"type": "string"},
              "format": {"type": "string"}
            }
          }
        }
      }
    },
    "structure": {
      "type": "object",
      "description": "Code structure and organization",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "purpose": {"type": "string"},
              "dependencies": {"type": "array", "items": {"type": "string"}}
            }
          }
        },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "purpose": {"type": "string"},
              "content_type": {"type": "string"}
            }
          }
        },
        "navigation": {
          "type": "object", 
          "properties": {
            "type": {"type": "string"},
            "items": {"type": "array", "items": {"type": "string"}},
            "mobile_behavior": {"type": "string"}
          }
        }
      }
    },
    "technical_details": {
      "type": "object",
      "properties": {
        "html_version": {"type": "string"},
        "css_features": {
          "type": "array",
          "items": {"type": "string"}
        },
        "javascript_features": {
          "type": "array", 
          "items": {"type": "string"}
        },
        "frameworks_used": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "responsive_design": {
      "type": "object",
      "properties": {
        "breakpoints": {
          "type": "object",
          "properties": {
            "mobile": {"type": "string"},
            "tablet": {"type": "string"},
            "desktop": {"type": "string"},
            "large_desktop": {"type": "string"}
          }
        },
        "mobile_first": {"type": "boolean"},
        "touch_optimized": {"type": "boolean"}
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "optimization_techniques": {
          "type": "array",
          "items": {"type": "string"}
        },
        "estimated_metrics": {
          "type": "object",
          "properties": {
            "load_time": {"type": "string"},
            "file_sizes": {
              "type": "object",
              "properties": {
                "html": {"type": "string"},
                "css": {"type": "string"},
                "js": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "wcag_level": {"type": "string"},
        "features_implemented": {
          "type": "array",
          "items": {"type": "string"}
        },
        "testing_notes": {"type": "string"}
      }
    },
    "metadata": {
      "type": "object",
      "required": ["framework", "created_by", "version"],
      "properties": {
        "framework": {"type": "string"},
        "created_by": {"type": "string"},
        "version": {"type": "string"},
        "responsive": {"type": "boolean"},
        "accessibility_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "performance_optimized": {"type": "boolean"},
        "browser_compatibility": {
          "type": "array",
          "items": {"type": "string"}
        },
        "code_quality_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      }
    }
  }
}